{{/*
Return the range of tolerations if defined.

Example for infrastructure nodes in the values-file:
      tolerations:
        - effect: NoSchedule
          key: infra
          operator: Equal
          value: reserved
        - effect: NoSchedule
          key: infra
          operator: Equal
          value: reserved
     
{{ include "helpers.tolerations" . -}}
*/}}

{{- define "helpers.tolerations" -}}
tolerations:
  {{- range . }}
  - key: "{{ .key }}"
    operator: "{{ .operator }}"
    value: "{{ .value }}"
    effect: "{{ .effect }}"
    {{- if .tolerationSeconds }}
    tolerationSeconds: {{ .tolerationSeconds }}
    {{- end }}
  {{- end }}
{{- end -}}
